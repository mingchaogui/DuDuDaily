/**index.wxss**/

.container_index {
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.topStory-item {
  display: flex;
}

.topStory-image {
  width: 100%;
  height: 100%;
  background-color: darkslateblue;
}

.topStory-title {
  font-size: 13pt;
  line-height: 120%;
  color: white;
  position: absolute;
  bottom: 40rpx;
  left: 36rpx
}

.topStory-image::before {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  content: '';
}

.date {
  font-size: 13pt;
  line-height: 200%;
  color: #717171;
  background-color: #efeff4;
  padding-left: 28rpx;
}

.story-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 32rpx 28rpx;
  border-bottom: 1rpx solid #ececec;
}

.story-tag {
  width: 12rpx;
  height: 12rpx;
  background-color: #ff6511;
  border-radius: 50%;
  margin-top: 14rpx;
  margin-right: 28rpx;
}

.story-image {
  width: 128rpx;
  height: 128rpx;
}

.story-title {
  font-size: 13pt;
  line-height: 120%;
  color: #4a4a4a;
}
