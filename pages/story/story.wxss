page {
  background: #fff;
}

.container_story {
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.title {
  padding: 25rpx 20rpx;
  background: #f9f9f9;
}

.title-text {
  font-size: 14pt;
  line-height: 120%;
  color: #494b4d;
  font-weight: 600;
}

.body {
  line-height: 160%;
  margin: 20rpx 0;
  font-size: 11pt;
  color: #666769;
}

.body-image {
  width: 100%;
  height: 220rpx;
  display: block;
  margin: 10rpx 0;
}

.body-text {
  margin: 0 20rpx 10rpx;
}

.comment {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  font-size: 11pt;
  line-height: 300%;
  text-align: center;
  border-top: 1rpx solid #ececec;
}
